@model Address


<h1>Add new address</h1>
<form method="post">
	<div class"mb-3">
		<label>Street</label>
		<input asp-for="Street" />
		<span asp-validation-for="Street"></span>
	</div>
	<div class"mb-3">
		<label>House</label>
		<input asp-for="House" />
		<span asp-validation-for="House"></span>
	</div>
	<div class"mb-3">
		<label>Apartment</label>
		<input asp-for="Apartment" />
		<span asp-validation-for="Apartment"></span>
	</div>
	<button type="submit">Add address</button>
	<button><a asp-controller="Address" asp-action="Index">Return to all addresses</a></button>

</form>
